        Table result = new Table(columnNames);
        List<String> allCols = new ArrayList<String>();
        List<String> sameCols = new ArrayList<String>();
        List<Column> list1 = new ArrayList<Column>();
        List<Column> list2 = new ArrayList<Column>();

